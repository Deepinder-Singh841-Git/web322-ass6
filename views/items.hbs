<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.postDate}}</td>
                            <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
                            <td>${{this.price}}</td>
                            <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{#unless items}}
<div class="row">
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
</div>
{{/unless}}