<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Categories</h2>
            <a href="/categories/add" class="btn btn-success">+ Add Category</a>
        </div>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
                        <td><a href="/items?category={{this.id}}">{{this.category}}</a></td>
                        <td>
                            <a href="/categories/delete/{{this.id}}" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="3" class="text-center">No categories found</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{#unless categories}}
<div class="row">
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
</div>
{{/unless}}